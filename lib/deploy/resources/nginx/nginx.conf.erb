#user www-data;
worker_processes  1;

error_log  /log/nginx_error.log;
pid        /var/run/nginx.pid;

events {
  worker_connections  1024;
  # multi_accept on;
}

http {
  include     mime.types;
  access_log	/log/nginx_access.log;
  sendfile        on;
  #tcp_nopush     on;

  keepalive_timeout  65;
  tcp_nodelay        on;

  gzip  on;
  gzip_http_version 1.1;
  gzip_vary on;
  gzip_comp_level 8;
  gzip_min_length 10;
  gzip_proxied any;
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  gzip_buffers 16 8k;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";

  <% if stage != 'vm' %>
  ssl_certificate /etc/ssl/certs/actionitems.crt;
  ssl_certificate_key /etc/ssl/private/actionitems.key;

  server {
    listen 80;
    server_name  actionitems.us;
    root /app/public;
    if (!-f $document_root/$document_uri) {
      rewrite ^(.*) https://$host$1 permanent;
    }
  }

  server {
    listen 80;
    server_name blog.actionitems.us;
    root /blog;
  }
  <% end %>

  server {
    <% if stage == 'vm' %>
    listen 80;
    <% else %>
    listen 443 default ssl;
    <% end %>

    server_name actionitems.us rails.actionitems.us;
    root /app/public;

    location /offline { break; }

    location / {
      if (-f $document_root/../offline) {
        return 503;
      }

      proxy_set_header X-Real-IP  $remote_addr;
      proxy_set_header X-Forwarded-Host $host;
      proxy_set_header X-Forwarded-Proto $scheme;

      if (!-f $document_root/$document_uri) {
        proxy_pass http://localhost:8080;
      }
    }

    error_page 503 @503;
    location @503 {
      rewrite ^(.*)$ /offline.html break;
    }
  }

  server {
    <% if stage == 'vm' %>
    listen 80;
    <% else %>
    listen 443;
    <% end %>

    server_name ~^resque\..*actionitems.us$;

    auth_basic "Resque-web";
    auth_basic_user_file /opt/nginx/conf/htpasswd;

    proxy_set_header  X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;

    location / {
      proxy_pass http://localhost:5678;
    }
  }

  # redirects all variations of actionitems domain to actionitems.us
  server {
    listen 80;
    server_name www.actionitems.us actionitems.org www.actionitems.org metacircular.com www.metacircular.com;
    rewrite ^(.*) http://actionitems.us$1 permanent;
  }
}
